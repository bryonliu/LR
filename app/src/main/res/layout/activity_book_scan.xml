<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zxing_result_view">

        <ImageView
            android:id="@+id/iv_giveup"
            android:layout_width="@dimen/delete_icon"
            android:layout_height="@dimen/delete_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_clear_24dp" />

        <View
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/iv_giveup"
            android:layout_alignTop="@id/iv_giveup"
            android:layout_height="@dimen/delete_icon"/>
        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="@dimen/delete_icon"
            android:layout_height="@dimen/delete_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_done_24dp" />

        <ImageView
            android:id="@+id/iv_book_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_book_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:maxLines="1"
            android:padding="10dp"
            android:text="当我跑步的时候，我谈些什么"
            android:textColor="@color/white_alpha"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_autor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:padding="10dp"
            android:text="树上春树"
            android:textColor="@color/white_alpha"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_content_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_description"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_book_des"
            android:layout_below="@id/tv_content_des"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="@string/book_description"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>